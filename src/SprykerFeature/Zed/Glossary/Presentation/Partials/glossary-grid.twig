{% include '@Gui/Partials/Table/header.twig' with { table_title: 'Glossary' } %}

<table class="footable table table-stripped toggle-arrow-tiny">
    <thead>
        <tr>
            <th>{{ 'Glossary Key' | trans }}</th>
            {% for key,locale in locales %}
            <th>{{ locale }}</th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {% for row in grid.content.rows %}
        <tr>
            <td><a href="/glossary/index/edit/?id={{ row.id_glossary_key }}">{{ row.key }}</a></td>
            {% for key,locale in locales %}
                {% set new_key = 'translation_' ~ key ~ '_value' %}
            <td>{{ row[new_key] }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>

{% include '@Gui/Partials/pagination.twig' %}

{% include '@Gui/Partials/Table/footer.twig' %}
