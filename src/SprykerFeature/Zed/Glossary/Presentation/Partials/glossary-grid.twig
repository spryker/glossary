<div
    class="spy-grid interactive"
    ng-controller="GridController"
    src="/glossary/grid/translation"
    name="grid"
    channel="glossary"
>
    <div spy-grid-pages="pages" labels="{ items : 'Show %n items', pages : 'Page %n of %m' }"></div>

    <table>
        <thead>
            <tr>
                <th spy-grid-head="columns['glossary_key']" label="Glossary Key"></th>
                {% for key,locale in locales %}
                <th spy-grid-head="columns['{{ key }}']" label="{{ locale }}"></th>
                {% endfor %}
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="row in rows" ng-click="$emitAllChannels('glossary_edit', row)">
                <td>{[{ row.key }]}</td>
                {% for key,locale in locales %}
                <td>{[{ row.translation_{{ key }}_value }]}</td>
                {% endfor %}
            </tr>
            <tr ng-if="!rows.length">
                <td colspan="4">No results found</td>
            </tr>
        </tbody>
    </table>

    <div spy-grid-pages="pages" labels="{ items : 'Show %n items', pages : 'Page %n of %m' }"></div>
</div>
